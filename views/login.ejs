                    <label class="required" for="password">Password</label>
                    <input type="password" class="form-control" style="height: 40px;"id="password" placeholder="Password" name="password" required>
                </div>
                <a href="/register" style="height: 30px; width:70px"class="btn btn-outline-danger mr-2 pl-4 pr-4 ">Register</a>
